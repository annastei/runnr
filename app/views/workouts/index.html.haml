- model_class = Workout
:javascript
  $.getJSON( "/workouts/statistics.json", function( data ) {
    $("#count").text(data.count);
    $("#average_speed").text(data.average_speed.toFixed(2));
    $("#average_per_week").text(data.average_per_week.toFixed(2));
  });
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

.row
  .span4
    .canvas
      .dummy
      .content
        #count.big_number
        .caption pass totalt
  .span4
    .canvas
      .dummy
      .content
        #average_speed.big_number
        .caption medelhastighet
  .span4
    .canvas
      .dummy
      .content
        #average_per_week.big_number
        .caption pass i snitt per vecka

.row
  .span12

    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:date)
          %th= model_class.human_attribute_name(:distance)
          %th= model_class.human_attribute_name(:duration)
          %th= model_class.human_attribute_name(:comment)
          %th=t '.actions', :default => t("helpers.actions")
      %tbody
        - @workouts.each do |workout|
          %tr
            -#%td= link_to workout.id, workout_path(workout)
            %td= workout.date
            %td= workout.distance
            %td= workout.duration
            %td= workout.comment
            %td
              = link_to t('.edit', :default => t("helpers.links.edit")), edit_workout_path(workout), :class => 'btn btn-mini'
              = link_to t('.destroy', :default => t("helpers.links.destroy")), workout_path(workout), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

    = link_to t('.new', :default => t("helpers.links.new")), new_workout_path, :class => 'btn btn-primary'
